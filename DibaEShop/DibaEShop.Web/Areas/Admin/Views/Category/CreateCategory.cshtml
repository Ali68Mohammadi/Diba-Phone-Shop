@model DibaEShop.Models.Category;
@{
    ViewData["Title"] = "CreatCategory";
    Layout = "_Layout";
}
 

<form method="post">
    <div class="border p-3 m-4">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="enter name">
            <span asp-validation-for="Name" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" placeholder="enter displsy order">
            <span asp-validation-for="DisplayOrder" class="text text-danger "></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a class="btn btn-secondary " asp-controller="Category" asp-action="Index">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}