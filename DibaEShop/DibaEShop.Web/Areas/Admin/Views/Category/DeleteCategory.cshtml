@model DibaEShop.Models.Category;
@{
    ViewData["Title"] = "DeleteCategory";
}
<form method="post" asp-action="DeleteCategory">
    <div class="border p-3 m-4">
        <input type="hidden" asp-for="CategoryId" />
        <h2>Delete Category</h2>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input disabled asp-for="Name" class="form-control disabled" placeholder="enter name">
            <span asp-validation-for="Name" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DisplayOrder"></label>
            <input disabled asp-for="DisplayOrder" class="form-control disabled" placeholder="enter displsy order">
            <span asp-validation-for="DisplayOrder" class="text text-danger "></span>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary " asp-controller="Category" asp-action="Index">Back to List</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
       
    }
}

