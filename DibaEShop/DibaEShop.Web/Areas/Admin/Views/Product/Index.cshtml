@model IEnumerable<DibaEShop.Models.Product>;
@{
    ViewData["Title"] = "Products";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 >Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Product" asp-action="Upsert">Create New Product</a>
        </div>
    </div>
    <br /><br />

    <table id="tblData" class="table table-bordered table-striped align-content-center  " style="width:100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/product.js" asp-append-version="true"></script>
    <partial name="_Notification"/>
}