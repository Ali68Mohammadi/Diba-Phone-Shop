                @if (User.IsInRole(SD.Role_Admin))
                {
                <div class="row">
                <label> Choose Users Role</label>
                <select asp-for="@Model." asp-items="@Model.RoleList" class=form-select>

                <option disabled selected>-Select Role-</option>
                </select>
                </div>

                }
                else
                {

                <span asp-for="@Model." value="Customer" />
                }


                </div>*@

            </div>
            <div class="row">
                <button type="submit" class=" btn w-100 btn-lg btn-primary">Update</button>
            </div>

        </form>
    </div>

</div>

